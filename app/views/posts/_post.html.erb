 <div class="row">
 <div class="span0 well text-centered">
 <% if logged_in?%>
   <%= link_to vote_post_path(post, vote: true), method: 'post' do %>
   <i class="icon-arrow-up"></i>
   <% end %>
   <% end %>
   <br>
   <%= post.total_votes %>
   <br>
   <% if logged_in?%>
   <%= link_to vote_post_path(post, vote: false), method: 'post' do %>
   <i class="icon-arrow-down"></i>
   <% end %>
   <% end %>
 </div>
    <div class="span8 well">
    
     <%= render post.categories %>

    <h4><%= link_to post.title, post_path(post) %></h4>
    <p><%= post.description %></p>
    
    <p>
    <span class="quiet"><i>posted by</i>  <%= link_to post.creator.username, user_path(post.creator) if post.creator %> <i>on  <%= post.created_at.strftime("%B %d, %Y") %></i></small></p>

    <% if logged_in? && current_user.id == post.user_id %><small><span class="label label-info"><%= link_to 'Edit this post ', edit_post_path(post)%></span><% end %>
      <span class="label label-warning"><%= link_to("#{post.comments.size} comments", post_path(post)) %> </span>
    </small>

    </div>
  </div>