<% show_post ||= false %>

<div class="row">
  <div class="span0 well text-center">
  <% if logged_in?%>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: true), method: 'post', remote: true do %>
      <i class="icon-thumbs-up"></i>
    <% end %>
    <% end %>
  <br>
  <span id="comment_<%= comment.id %>_votes">
  <%= pluralize(comment.total_votes, 'vote') %></span>
   <br>
   <% if logged_in? %>
    <%= link_to vote_post_comment_path(comment.post, comment, vote: false), method: 'post', remote: true do %>
      <i class="icon-thumbs-down"></i>
    <% end %>
    <% end %>
 </div>

  <div class="well span8">
    <em>"<%= comment.body %>"</em>

    <% if show_post%>
    on <%= link_to comment.post.title, post_path(comment.post)%>
    <% end %>
    <span class="quiet"><i> by</i> </span> <%= link_to comment.creator.username, user_path(comment.creator) %> <small>on  <%= comment.created_at.strftime("%B %d, %Y") %></small>
  </div>
</div>